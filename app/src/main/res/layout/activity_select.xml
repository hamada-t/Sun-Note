<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SelectActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/no_margin"
    android:paddingTop="@dimen/no_margin"
    android:paddingLeft="@dimen/no_margin"
    android:paddingRight="@dimen/no_margin"
    android:background="@color/white">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            app:layout_widthPercent="32.8%"
            app:layout_heightPercent="48.5%"
            card_view:cardElevation="@dimen/elevation"
            card_view:cardBackgroundColor="@color/blue"
            card_view:cardCornerRadius="@dimen/cardCornerRadius"
            app:layout_marginLeftPercent="0.5%"
            app:layout_marginTopPercent="1%">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/note"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/record_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/no_margin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text"
                    android:gravity="center|bottom"
                    style="?android:attr/borderlessButtonStyle"/>
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview2"
            app:layout_widthPercent="32.8%"
            app:layout_heightPercent="48.5%"
            card_view:cardElevation="@dimen/elevation"
            card_view:cardBackgroundColor="@color/red"
            card_view:cardCornerRadius="@dimen/cardCornerRadius"
            app:layout_marginLeftPercent="0.4%"
            app:layout_marginTopPercent="1%"
            android:layout_toRightOf="@+id/cardview">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/one_play"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/one_play_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/no_margin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text"
                    android:gravity="center|bottom"
                    style="?android:attr/borderlessButtonStyle"
                    android:transitionName="@string/transition_list_item"/>
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview3"
            app:layout_widthPercent="32.8%"
            app:layout_heightPercent="48.5%"
            card_view:cardElevation="@dimen/elevation"
            card_view:cardBackgroundColor="@color/green"
            card_view:cardCornerRadius="@dimen/cardCornerRadius"
            app:layout_marginLeftPercent="0.4%"
            app:layout_marginRightPercent="0.4%"
            app:layout_marginTopPercent="1%"
            android:layout_toRightOf="@+id/cardview2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/clock"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/time_play_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/no_margin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text"
                    android:gravity="center|bottom"
                    style="?android:attr/borderlessButtonStyle"/>
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview4"
            app:layout_widthPercent="32.8%"
            app:layout_heightPercent="48.5%"
            card_view:cardElevation="@dimen/elevation"
            card_view:cardBackgroundColor="@color/orange"
            card_view:cardCornerRadius="@dimen/cardCornerRadius"
            app:layout_marginLeftPercent="0.5%"
            app:layout_marginTopPercent="1%"
            android:layout_below="@+id/cardview">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/calender"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/date_play_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/no_margin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text"
                    android:gravity="center|bottom"
                    style="?android:attr/borderlessButtonStyle"/>
            </FrameLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview5"
            app:layout_widthPercent="32.8%"
            app:layout_heightPercent="48.5%"
            card_view:cardElevation="@dimen/elevation"
            card_view:cardBackgroundColor="@color/pink_400"
            card_view:cardCornerRadius="@dimen/cardCornerRadius"
            app:layout_marginLeftPercent="0.4%"
            app:layout_marginTopPercent="1%"
            android:layout_below="@+id/cardview2"
            android:layout_toRightOf="@+id/cardview4">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/play"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/multi_select_play_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/no_margin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text"
                    android:gravity="center|bottom"
                    style="?android:attr/borderlessButtonStyle"/>
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview6"
            app:layout_widthPercent="32.8%"
            app:layout_heightPercent="48.5%"
            card_view:cardElevation="@dimen/elevation"
            card_view:cardBackgroundColor="@color/purple_400"
            card_view:cardCornerRadius="@dimen/cardCornerRadius"
            app:layout_marginLeftPercent="0.4%"
            app:layout_marginRightPercent="0.4%"
            app:layout_marginTopPercent="1%"
            android:layout_below="@+id/cardview3"
            android:layout_toRightOf="@+id/cardview5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/settings"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/setting_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/no_margin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text"
                    android:gravity="center|bottom"
                    style="?android:attr/borderlessButtonStyle"/>
            </FrameLayout>
        </android.support.v7.widget.CardView>

    </android.support.percent.PercentRelativeLayout>

</LinearLayout>